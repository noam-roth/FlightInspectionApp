<Window x:Class="FG4._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FG4._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        
        <local:VideoController x:Name="VideoController" Grid.Row="3" Grid.ColumnSpan="2" Background="LightGray"></local:VideoController>
        <local:Navigators Grid.Row="0" Grid.Column="0" x:Name="Navigators"></local:Navigators>
        <local:GraphsAndCorrelation Grid.Row="0" Grid.Column="1"  x:Name="GraphsAndCorrelation"></local:GraphsAndCorrelation>

    </Grid>
</Window>
